#!/usr/bin/env bash

# set -x

HERE="`dirname $0`"

if [ ! -f $HERE/.coursier ]; then
  curl -L -o $HERE/.coursier https://git.io/vgvpD
  chmod +x $HERE/.coursier
fi

if [ ! -f $HERE/.scalafmt ]; then
  $HERE/.coursier bootstrap org.scalameta:scalafmt-cli_2.13:3.0.3 --main org.scalafmt.cli.Cli -o $HERE/.scalafmt
  chmod +x $HERE/.scalafmt
fi

$HERE/.scalafmt "$@"
